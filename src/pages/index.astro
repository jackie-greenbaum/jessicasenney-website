---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-5xl font-bold">Jessica Senney</div>
    <div class="py-2">
      <text class="text-lg">
        Writer & Author - Young Adult Fiction
      </text>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">The Soul Ravenger Series</div>
  </div>

  <HorizontalCard
    title="Rebel Soul: Book 2 of the Soul Ravenger Series"
    img="/RebelSoul.jpg"
    desc1="Jump back in to the world of the Soul Ravengers in the sequel to Lost Soul!"
    desc2="Isaac's little sister Haley is all grown up and ready for a new adventure. But when she's suddenly thrust into the world of the Soul Ravengers, she finds she may have gotten more than she bargained for: a reunion with her long dead brother, a budding romance, and a new threat that risks turning the afterlife on its head..."
    url="https://www.amazon.com/dp/B0DDFCK7NW/ref=sr_1_2?crid=3S8VRUOWXAT9S&dib=eyJ2IjoiMSJ9.sxdPXhcQOu6dK_j9gprgyx738psqWMZFPMrfCXZkWBk.6j_f49gNMW7oytbs9wNtptj1vLsBNgrjlv7zlYgcvtA&dib_tag=se&keywords=jessica+senney&qid=1723935572&sprefix=%2Caps%2C195&sr=8-2"
    badge="NEW"
  />
  <HorizontalCard
    title="Lost Soul: A Soul Ravenger Novel"
    img="/LostSoul.jpg"
    desc1="Discover the world of the Soul Ravengers in Lost Soul!"
    desc2="Isaac Waller must face his newfound destiny to collect the souls of the dead as a Soul Ravenger. But what happens if destiny got it wrong?"
    url="https://www.amazon.com/Lost-Soul-Ravenger-Novel-ebook/dp/B0B36HMRGJ/ref=sr_1_1?crid=3S8VRUOWXAT9S&dib=eyJ2IjoiMSJ9.sxdPXhcQOu6dK_j9gprgyx738psqWMZFPMrfCXZkWBk.6j_f49gNMW7oytbs9wNtptj1vLsBNgrjlv7zlYgcvtA&dib_tag=se&keywords=jessica+senney&qid=1723935572&sprefix=%2Caps%2C195&sr=8-1"
  />
  <div class="divider my-0"></div>
</BaseLayout>
